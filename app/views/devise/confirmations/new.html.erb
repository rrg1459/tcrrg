<div id="resend-confirmation-form" class="tw-form row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h4><b>Resend confirmation</b></h4>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-1">
          <label>Didn't receive confirmation instructions? Enter your email and hit the button below</label>
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %></div>
            <div class="form-group">
              <%= f.submit "Resend confirmation", class: "btn btn-primary" %>
            </div>
            <%= render 'partials/devise_form_errors' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
