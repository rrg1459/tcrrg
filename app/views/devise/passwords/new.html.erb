<div id="forgot-password-form" class="row tw-form">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h4><b>Forgot your password?</b></h4>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-1">
          <label>Enter email or username to recover your account</label><br>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
            </div>
            <div class="form-group">
              <%= f.submit "Reset Password", class: "btn btn-primary" %>
            </div>
            <%= render 'partials/devise_form_errors' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
