<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissable alert-fixed">
    <%= resource.errors.full_messages.first %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </div>
<% end %>
<div class="tw-form row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h4><b>Edit Profile</b></h4>
      <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :avatar %><br>
              <%= render 'partials/avatar', user: @user, klass: 'avatar-lg' %><br>
              <br>
              <%= f.file_field :avatar %>
            </div>
            <div class="form-group">
              <%= f.label :cover %><br>
              <%= image_tag @user.cover, style: 'width: 400px;' %><br>
              <br>
              <%= f.file_field :cover %>
            </div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: 'name', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :username %>
              <%= f.text_field :username, placeholder: 'username', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :about %>
              <%= f.text_area :about, placeholder: 'about', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :location %>
              <%= f.text_field :location, placeholder: 'location', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :website %>
              <%= f.text_field :website, placeholder: 'website', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= submit_tag "Update", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
