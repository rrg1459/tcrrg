<div style="<%= user_cover(@user) %>" class="cover-pic">
</div>
<%= render 'user_nav', view_type: 'following' %>
<div class="row">
  <div class="col-lg-3">
    <%= render 'partials/user_info', view_type: 'profile', user: @user %>
  </div>
  <div class="col-lg-6">
    <div id="content" class="tw-form">
      <div id="feed" class="well">
        <h4><b>Following</b></h4>
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
            <%= render(@following) || "Not Following anyone." %>
          </div>
        </div>
      </div>
      <div id="load-more">
        <%= render 'partials/load_more', items: @following %>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="well"></div>
  </div>
</div>
